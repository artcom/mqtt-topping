{
  "name": "@artcom/mqtt-topping",
  "version": "4.0.3",
  "description": "A TypeScript wrapper for MQTT.js with payload parsing, multi-handlers, and an HTTP query client.",
  "license": "MIT",
  "author": "ART+COM GmbH",
  "homepage": "https://github.com/artcom/mqtt-topping",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/artcom/mqtt-topping"
  },
  "bugs": {
    "url": "https://github.com/artcom/mqtt-topping/issues"
  },
  "type": "module",
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "exports": {
    ".": {
      "types": "./dist/index.d.mts",
      "import": "./dist/index.mjs",
      "default": "./dist/index.mjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsdown",
    "format": "prettier --write .",
    "lint": "eslint src tests --ext .ts",
    "prepublishOnly": "npm run lint && npm test && npm run build",
    "test": "jest",
    "type-check": "tsc --noEmit",
    "watch": "tsc -w",
    "prepare": "husky"
  },
  "types": "dist/index.d.mts",
  "dependencies": {
    "mqtt": "^5.14.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.14.0",
    "eslint": "^9.34.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-fetch-mock": "^3.0.3",
    "lint-staged": "^15.5.0",
    "prettier": "3.6.2",
    "ts-jest": "^29.4.1",
    "tsdown": "^0.16.5",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.41.0"
  },
  "keywords": [
    "http",
    "iot",
    "mqtt",
    "mqttjs",
    "typescript",
    "wrapper"
  ],
  "engines": {
    "node": ">=22.0.0"
  },
  "lint-staged": {
    "*.{ts,js,mjs,cjs}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
